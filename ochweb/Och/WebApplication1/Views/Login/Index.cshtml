@model WebApplication1.Models.LoginView

<!DOCTYPE html>
<html lang="zh-Hant">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>登入 Login</title>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
		<script src="/Script/login.js"></script>
</head>
<body class="bg-light">

	<div class="container mt-5">
		<div class="row justify-content-center">
			<div class="col-md-6">
				<div class="card shadow">
					<div class="card-header text-center">
						<h3>登入系統</h3>
					</div>
					<div class="card-body">
						<div class="mb-3">
							@Html.LabelFor(model => model.UserID)
							@Html.EditorFor(model => model.UserID, new{@readonly = "true" })
						</div>

						<div class="mb-3">
							@Html.LabelFor(model => model.Password)
							@Html.EditorFor(model => model.Password, new{@readonly = "true" })
						</div>
						<div class="d-grid">
							<button type="button" class="btn btn-save" onclick="login.onLoginClick(this)" id="SaveButton">登入</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>


</body>
</html>
