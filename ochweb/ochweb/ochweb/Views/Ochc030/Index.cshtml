@model ochweb.Models.BibleLogViewModel


<h2>📖 讀經狀況查詢</h2>

<form method="get" class="mb-3">
    <label for="date">📅 查詢日期：</label>
    <input type="date" name="date" id="date" value="@Model.QueryDate?.ToString("yyyy-MM-dd")" />
    <button type="submit" class="btn btn-primary">查詢</button>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>UserID</th>
            <th>使用者名稱</th>
            <th>今日是否讀經</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Records)
        {
            <tr>
                <td>@item.UserID</td>
                <td>@item.UserName</td>
                <td>
                    @if (item.HasRead)
                    {
                        <span class="text-success">✅ 有</span>
                    }
                    else
                    {
                        <span class="text-danger">❌ 無</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>