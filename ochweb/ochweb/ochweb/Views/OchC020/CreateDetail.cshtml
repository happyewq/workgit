@model RegistrantCreateViewModel
@{
    ViewData["Title"] = "新增報名者";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4 rounded-4">
        <h3 class="text-center text-primary fw-bold mb-4">➕ 新增報名者</h3>

        @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

        <form asp-action="SaveDetailData" method="post" class="row g-3">
            @Html.AntiForgeryToken()

            <input type="hidden" asp-for="SessionID" />
            <input type="hidden" asp-for="UserID" />

            <div class="col-md-4">
                <label asp-for="UserNMC" class="form-label"></label>
                <input asp-for="UserNMC" class="form-control" />
                <span asp-validation-for="UserNMC" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="UserType" class="form-label"></label>
                <select asp-for="UserType" class="form-control">
                    <option value="w">上班族</option>
                    <option value="s">學生</option>
                </select>
                <span asp-validation-for="UserType" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="FeeAmount" class="form-label"></label>
                <input asp-for="FeeAmount" class="form-control" type="number" step="0.01" min="0" />
                <span asp-validation-for="FeeAmount" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="PaidYN" class="form-label"></label>
                <select asp-for="PaidYN" class="form-control">
                    <option value="Y">已繳交</option>
                    <option value="N">未繳交</option>
                </select>
                <span asp-validation-for="PaidYN" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="RegisterTime" class="form-label"></label>
                <input asp-for="RegisterTime" class="form-control" type="datetime-local"
                       value="@(Model.RegisterTime.HasValue? Model.RegisterTime.Value.ToString("yyyy-MM-ddTHH:mm") : "")" />
                <span asp-validation-for="RegisterTime" class="text-danger"></span>
                @* <div class="form-text">可保留預設現在時間，或自行調整。</div> *@
            </div>

            <div class="col-12 d-flex justify-content-between mt-4">
                <a asp-action="Details" asp-route-id="@Model.SessionID" class="btn btn-secondary">
                    ← 返回名單
                </a>
                <button type="submit" class="btn btn-primary fw-bold">
                    儲存
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
