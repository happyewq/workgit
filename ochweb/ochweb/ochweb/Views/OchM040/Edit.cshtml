@model ochweb.Models.OchM040View

@{
    ViewBag.Title = "編輯使用者";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts {
    <script src="/Script/ochm040.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
}

<div class="container mt-5">
    <div class="card shadow-lg p-4 rounded-4">
        <h3 class="text-center text-primary fw-bold mb-4">🛠️ 編輯使用者</h3>

        <div class="mb-3">
            <label for="UserID" class="form-label fw-semibold">帳號</label>
            <input type="text" class="form-control rounded-pill px-3" id="UserID" value="@Model.UserID" readonly />
        </div>

        <div class="mb-3">
            <label for="UserNMC" class="form-label fw-semibold">名稱</label>
            <input type="text" class="form-control rounded-pill px-3" id="UserNMC" value="@Model.UserNMC" />
        </div>

        <div class="mb-3">
            <label for="Permission" class="form-label fw-semibold">權限</label>
            <select asp-for="Permission" class="form-select rounded-pill px-3">
                <option value="User" selected="@((Model.Permission == "User"))">使用者</option>
                <option value="Admin" selected="@((Model.Permission == "Admin"))">系統管理員</option>
            </select>
        </div>

        <div class="mb-3">
            <label for="Password" class="form-label fw-semibold">目前密碼</label>
            <input type="password" class="form-control rounded-pill px-3" id="Password" value="@Model.Password" readonly />
        </div>

        <div class="mb-3">
            <label for="NewPassword" class="form-label fw-semibold">新密碼</label>
            <input type="password" class="form-control rounded-pill px-3" id="NewPassword" value="@Model.NewPassword" />
        </div>

        <div class="mb-3">
            <label for="ConfirmPassword" class="form-label fw-semibold">確認密碼</label>
            <input type="password" class="form-control rounded-pill px-3" id="ConfirmPassword" value="@Model.ConfirmPassword" />
        </div>

        <div class="text-center mt-4">
            <button class="btn btn-success btn-lg px-4 rounded-pill shadow-sm me-3" onclick="ochm040.saveEdit()">
                💾 儲存修改
            </button>
            <a href="@Url.Action("Index")" class="btn btn-outline-secondary btn-lg px-4 rounded-pill shadow-sm">
                返回列表
            </a>
        </div>
    </div>
</div>
